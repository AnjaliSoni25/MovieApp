<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/trans" /> <!-- Set your desired background color -->
            <corners android:radius="50dp" /> <!-- Adjust the radius to control the corner roundness -->
        </shape>
    </item>

    <!-- Border -->
    <item android:right="0dp" android:left="0dp" android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Set a transparent color for the inner part -->
            <stroke
                android:color="@color/bg"
            android:width="2dp"
            />
            <corners android:radius="50dp" />
        </shape>
    </item>
</layer-list>
